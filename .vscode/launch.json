{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node", // launch without browser to test code without browser
      "request": "launch",
      "name": "Launch mainNodeJs.js in node",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/mainNodeJs.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/out/**/*.js"]
    },
    // {  // does not work with ES6 or later because  Cross origin  policy of importing a module requires http server
    //   "type": "msedge",
    //   "request": "launch",
    //   "name": "Launch bibber.html",
    //   "file": "${workspaceFolder}/bibber.html"
    // },
    {
      "type": "msedge",
      "name": "Launch bibber.html(and main.js ) in webserver (requires Webserver task running)",
      "request": "launch",
      "url": "http://localhost:4444/bibber.html",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/out/**/*.js"]
    }
  ]
}
